@model IEnumerable<ELPS.Domain.Entities.AppIdentity>

@{
    ViewBag.Title = "All Solutions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int counter = 0;
}

<div>
    <div class="clear-float">
        <h1 class="text-light place-left">All Solutions</h1>

        <div class="place-right">
            @Html.ActionLink("+", "AddLicense", null, new { @class = "button cycle-button primary block-shadow-success mif-ani-shuttle mif-ani-slow", @data_role = "hint", @data_hint_mode = "2", @data_hint_position = "left", @data_hint = "|Add new License" })
        </div>
    </div>
    
    <hr class="thin bg-grayLighter">

    <table class="dataTable border bordered" data-role="datatable" data-auto-width="false">
        <thead>
            <tr>
                <th style="width: 20px;"></th>
                <th class="sortable-column">
                    Solution Name
                </th>
                <th class="sortable-column">
                    @Html.DisplayNameFor(model => model.ShortName)
                </th>
                <th class="sortable-column">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="sortable-column">
                    Activated
                </th>
                <th class="sortable-column">
                    @Html.DisplayNameFor(model => model.BaseUrl)
                </th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                counter++;
                <tr>
                    <td>@counter</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LicenseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShortName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="tag ep success">YES</span>
                        }
                        else
                        {
                            <span class="tag ep warning">NO</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BaseUrl)
                    </td>
                    <td>
                        @Html.ActionLink("Preview/Edit", "EditLicense", new { id = item.Id }, new { @class = "button small-button info epBtn" })
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>

@section scripts{
    <script type="text/javascript">
        $(function () {
            $("#lnkLicense").addClass("active");
            
            
        });

        function showDialog(id) {
            var dialog = $(id).data('dialog');
            dialog.open();
        }
    </script>
}