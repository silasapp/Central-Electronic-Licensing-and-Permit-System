@model ELPS.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Password Reset";
    ViewBag.pageType = "SinglePage";
    var ErrorList = (List<string>)TempData["ErrorList"];

}
<div class="col-12" id="leftSide">
    <section class="bodyContent">
        <section id="left-header" class="d-flex  align-items-center pb-3 my-2">
            <div id="left-logo">
                <img src="~/Content/assets/img/nuprc.png" alt="" class="img-fluid">
            </div>
            <div class="left-title">
                <span class="text-white">The  Nigerian Upstream Petroleum Regulatory Commission</span>
            </div>
        </section>

        <div class="title-divider SmallerScreen"></div>
        <section class="MainContents">
            <section class="selectedInfo py-4">
                <div class="lower-section d-flex align-items-center">
                    <b class="left-sub-acronym text-white">CELPS</b>
                    <span class="badge selected badge-pill badge-warning text-white">Selected</span>
                </div>
                <div class="left-sub-title">Central Electronic Licensing and Permit System</div>
            </section>

            <div class="left-sub-title-divider"></div>

            <section class="form pt-4 text-white">
                <div class="row pb-2">
                    <div class="col d-flex justify-content-between align-items-center formHeader">
                        <div class="login-title">Forgot Password</div>
                        <div class="links">
                            @{var LoginLink = Url.Action("Login", "Account", new { appId = ViewBag.appId });}
                            <a href="@LoginLink" class="text-warning staticLink">Login Instead <span class="fa fa-arrow-right"></span></a>
                        </div>
                    </div>
                </div>
                <div class="ErrorSummary">

                    @if (ErrorList != null && ErrorList.Any())
                    {
                        foreach (var error in (List<string>)TempData["ErrorList"])
                        {
                            <div class="alert alert-warning alert-dismissable fade show text-danger" role="alert">
                                <span class="fa fa-exclamation-triangle"></span>
                                @error
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                    }
                </div>
                @using (Html.BeginForm("ResetPassword", "Account", new { appId = ViewBag.appId }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="formStep active" id="form-step-1">
                        @Html.HiddenFor(m => m.Email)
                        @Html.HiddenFor(m=>m.Code)

                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control text-white", placeholder = "Password" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-warning" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword)
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control text-white", placeholder = "Confirm Password" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-warning" })
                        </div>

                        <button type="submit" class="btn btnLink btn-warning submit" data-target="form-step-2">Proceed</button>
                    </div>
                }

            </section>
        </section>
        <div class="LargerScreen Footer">
            <section class="content">
                <div class="d-flex justify-content-around py-4">
                    <a href="https://www.nuprc.gov.ng/history-of-dpr/" class="navSep" target="_blank">About</a>
                    <a href="https://www.nuprc.gov.ng/acts-and-regulations/" class="navSep" target="_blank">Acts</a>
                    <a href="https://www.nuprc.gov.ng/dpr-guidelines/" class="navSep" target="_blank">Guidelines</a>
                    <a href="https://www.nuprc.gov.ng/contact/" target="_blank">Contact</a>
                </div>
            </section>
        </div>

        <footer class="SmallerScreen">
            <section class="content">
                <div class="d-flex justify-content-between py-2">
                    <a href="https://www.nuprc.gov.ng/history-of-dpr/" class="navSep" target="_blank">About</a>
                    <a href="https://www.nuprc.gov.ng/acts-and-regulations/" class="navSep" target="_blank">Acts</a>
                    <a href="https://www.nuprc.gov.ng/dpr-guidelines/" class="navSep" target="_blank">Guidelines</a>
                    <a href="https://www.nuprc.gov.ng/contact/" target="_blank">Contact</a>
                </div>
            </section>
        </footer>
    </section>
</div>


