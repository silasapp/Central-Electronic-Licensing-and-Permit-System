@model ELPS.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_NoNavLayout.cshtml";
}

<div class="mid-control">
    <h3>@ViewBag.Title</h3>
    <hr class="thin bg-grayLight" />

    <div>
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            <input type="hidden" name="appId" value="@ViewBag.appId" />

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "" })
                <div class="input-control text full-size">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, "New Password", new { @class = "" })
                <div class="input-control text full-size">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "" })
                <div class="input-control text full-size">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group align-center">
                <div class="">
                    <input type="submit" value="Reset password" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
