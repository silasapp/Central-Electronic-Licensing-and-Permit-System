@model List<ELPS.Domain.Entities.CompanyNameHistory>

@{
    ViewBag.Title = "Change of Company Name History";
    Layout = null;

}


<div class="clear-float">
    <div class="place-left">
        <h4 class="">Change of Company Name History</h4>
    </div>

</div>

<hr />
<div class="grid">
    @if (Model.Count > 0)
    {
        <table class="table">
            <tr>
                <th>
                    Date
                </th>
                <th>
                    New Name
                </th>
                <th>
                    Old Name
                </th>
                <th>
                    Edited By
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NewName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OldName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EditedBy)
                    </td>
                    <td></td>
                </tr>
            }

        </table>
    }
    else
    {
        <h5>No Name Change for Company on Portal</h5>
    }
</div>
